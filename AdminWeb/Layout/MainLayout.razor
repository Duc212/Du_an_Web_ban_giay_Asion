@inherits LayoutComponentBase
@using AdminWeb.Components

<div class="m-0 font-sans text-base antialiased font-normal dark:bg-slate-900 leading-default bg-gray-50 text-slate-500">
    <div class="absolute w-full bg-blue-500 dark:hidden min-h-75"></div>
    
    <Sidebar />
    
    <main class="relative h-full max-h-screen transition-all duration-200 ease-in-out xl:ml-68 rounded-xl">
        <Navbar PageName="@PageName" />
        
        <div class="w-full px-6 py-6 mx-auto">
            @Body
            
            <footer class="pt-4">
                <div class="w-full px-6 mx-auto">
                    <div class="flex flex-wrap items-center -mx-3 lg:justify-between">
                        <div class="w-full max-w-full px-3 mt-0 mb-6 shrink-0 lg:mb-0 lg:w-1/2 lg:flex-none">
                            <div class="text-sm leading-normal text-center text-slate-500 lg:text-left">
                                © @DateTime.Now.Year
                                <a href="/" class="font-semibold text-slate-700 dark:text-white" target="_blank">Asion Shop</a>
                                - Shop giày chất lượng cao
                            </div>
                        </div>
                        <div class="w-full max-w-full px-3 mt-0 shrink-0 lg:w-1/2 lg:flex-none">
                            <ul class="flex flex-wrap justify-center pl-0 mb-0 list-none lg:justify-end">
                                <li class="nav-item">
                                    <a href="/" class="block px-4 pt-0 pb-1 text-sm font-normal transition-colors ease-in-out text-slate-500">Trang chủ</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/about" class="block px-4 pt-0 pb-1 text-sm font-normal transition-colors ease-in-out text-slate-500">Giới thiệu</a>
                                </li>
                                <li class="nav-item">
                                    <a href="/contact" class="block px-4 pt-0 pb-1 pr-0 text-sm font-normal transition-colors ease-in-out text-slate-500">Liên hệ</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </main>
</div>

@code {
    [Parameter]
    public string PageName { get; set; } = "Dashboard";
}
