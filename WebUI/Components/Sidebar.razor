<style>
    .sidebar-sticky {
        position: sticky;
        top: 20px;
        height: calc(100vh - 40px);
        overflow-y: auto;
        z-index: 100;
    }
    
    /* Smooth scrolling for sidebar content */
    .sidebar-sticky::-webkit-scrollbar {
        width: 6px;
    }
    
    .sidebar-sticky::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 3px;
    }
    
    .sidebar-sticky::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 3px;
    }
    
    .sidebar-sticky::-webkit-scrollbar-thumb:hover {
        background: #a1a1a1;
    }

    /* Responsive - disable sticky on mobile */
    @@media (max-width: 768px) {
        .sidebar-sticky {
            position: static !important;
            height: auto !important;
            overflow-y: visible !important;
        }
    }
</style>

@code {
    [Parameter] public bool ShowGenderFilter { get; set; } = false;
    [Parameter] public bool ShowSpecialOffers { get; set; } = false;
    [Parameter] public bool ShowSportsFilter { get; set; } = false;
}