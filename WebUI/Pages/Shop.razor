@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "category")]
    public string? CategoryFilter { get; set; }

    private List<Product> AllProducts { get; set; } = new();
    private bool IsLoading { get; set; } = true;
    private bool ShowModal { get; set; } = false;
    private Product? SelectedProduct { get; set; } = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
    }

    protected override async Task OnParametersSetAsync()
    {
        // Reload when query parameters change
        await LoadProducts();
    }

    private async Task LoadProducts()
    {
        try
        {
            IsLoading = true;
            StateHasChanged();

            // Load products from API - Load more items for shop page
            int totalPages = 5; // Load first 5 pages = 100 products
            var allLoadedProducts = new List<Product>();

            for (int page = 1; page <= totalPages; page++)
            {
                var apiResponse = await ProductService.GetProductsWithPaginationAsync(page, 20);
                if (apiResponse?.Data != null && apiResponse.Data.Any())
                {
                    allLoadedProducts.AddRange(apiResponse.Data);
                }
            }

            AllProducts = allLoadedProducts;

            // Filter by category if provided
            if (!string.IsNullOrWhiteSpace(CategoryFilter))
            {
                AllProducts = AllProducts
                    .Where(p => p.Brand.Equals(CategoryFilter, StringComparison.OrdinalIgnoreCase))
                    .ToList();
            }

            Console.WriteLine($"[Shop] Loaded {AllProducts.Count} products");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Shop] Error loading products: {ex.Message}");
            AllProducts = new List<Product>();
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private void OnProductClick(Product product)
    {
        Navigation.NavigateTo($"/product/{product.Id}");
    }

    private void OnQuickView(Product product)
    {
        Console.WriteLine($"Quick view: {product.Name}");
        SelectedProduct = product;
        ShowModal = true;
        StateHasChanged();
    }

    private void CloseModal()
    {
        ShowModal = false;
        SelectedProduct = null;
        StateHasChanged();
    }

    private async Task HandleAddToCart(string message)
    {
        Console.WriteLine($"[Shop] Add to cart result: {message}");
        
        // Show toast notification
        if (message.Contains("th√†nh c√¥ng"))
        {
            await ToastService.ShowSuccess(message);
        }
        else
        {
            await ToastService.ShowError(message);
        }
        
        CloseModal();
    }
}
